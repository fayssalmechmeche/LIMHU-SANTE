{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block description %}{{ article.content|striptags|slice(0, 150) }}{% endblock %}

{% block keywords %}{{article.title}}, Limhu, santé naturelle, bien-être,{{ article.category.name }}{% endblock %}

{% block body %}
	<section id="article" class="article">
		<article class="container">
			<h1>{{ article.title }}</h1>
			<p class="metadata">Publié le {{ article.createAt|date('d/m/Y') }}</p>
			<main class="content">
				<p>{{ article.content|striptags|raw }}</p>
			</main>
		</article>
	</section>
{% endblock %}
