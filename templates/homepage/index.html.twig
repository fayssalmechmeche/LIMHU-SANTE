	<section id="blog" class="blog">
		<main class="container">
			<h2>Derniers Articles de Limhu</h2>
			{% for article in articles %}


				<div class="article">
					<h3>{{article.title}}</h3>
					<h3>{{article.subTitle}}</h3>
					<small>{{ article.createAt|date('d/m/Y') }}</small>
					<p>{{ article.content|slice(0, 200) ~ '...' |raw }}</p>
					<a href="{{ path('app_article', {'category': article.category.slug, 'slug': article.slug}) }}" class="btn">Lire la suite</a>
				</div>
			{% endfor %}

		</main>
	</section>
{% endblock %}
